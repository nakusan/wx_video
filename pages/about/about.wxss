.container {
  padding: 20rpx;
  font-size: 28rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.profile-pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #6d7ba067;
}

.login-btn {
  width: 20rpx; /* Set the button width */
  height: 50rpx; /* Set the button height */
  background-color: #25419bea;
  color: white;
  border-radius: 10rpx;
  text-align: center; /* Center text horizontally */
  font-size: 32rpx; /* Set font size */
  padding: 0; /* Remove default padding to fit width and height */
}

.history-section {
  margin-bottom: 20rpx;
  border-top: 2px solid #eee;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  margin-top: 10rpx;
}

.view-more {
  color: #999;
}

.history-content {
  display: flex; /* 设置为 flex 布局 */
  flex-direction: row; /* 水平排列子元素 */
  white-space: nowrap; /* 防止换行 */
}

.history-item {
  display: inline-flex; /* 使用 flex 布局 */
  flex-direction: column; /* 垂直堆叠图片和标题 */
  align-items: center; /* 水平居中对齐 */
  width: 200rpx; /* 固定宽度 */
  margin-right: 20rpx; /* 右边距 */
}

.history-image {
  width: 100%;
  height: 150rpx;
  border-radius: 10rpx;
}

.history-title {
  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  white-space: nowrap; /* Prevent text from wrapping */
  overflow: hidden; /* Hide overflow text */
  text-overflow: ellipsis; /* Add ellipsis to overflow text */
}

.feedback-section {
  padding: 20rpx 0;
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-bottom: 20px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.weui-input{
  text-align: center;
}

.save-btn{
  margin-top: 40rpx;
  background: #07c160;
  color: #fff;
}